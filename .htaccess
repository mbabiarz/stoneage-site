RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://stoneagetools.com/$1 [L,R=301]

Options +MultiViews

# protect .htaccess
<Files ~ "^.*\.([Hh][Tt][Aa])">
	Order allow,deny
	Deny from all
	Satisfy all
</Files>

# turn off directory browsing
IndexIgnore *

# show custom error pages for these HTTP statuses
ErrorDocument 404 /404.html

Redirect 301 /careers /jobs
Redirect 301 /prodrive /abx-pro
Redirect 301 /hydro-x /rotary-hydro-x
Redirect 301 /switcher /wgr-switcher
Redirect 301 /rotary-swivels /waterblast-tools-automated-equipment
Redirect 301 /news https://news.stoneagetools.com
Redirect 301 /custom-solutions /solutions
Redirect 301 /one-stop-shop https://info.stoneagetools.com/one-stop-shop

Redirect 302 /rotary-hydro-x /fixed-hydro-x
Redirect 302 /warthog-dealers https://www.stoneagetools.com/contact#sewer-tab